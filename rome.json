{
    "formatter": {
      "enabled": true,
      "ignore": [
        "**/node_modules/**",
        "**/.next/**",
        "**/dist/**",
        "**/build/**",
        "**/compiled/**",
        "./packages/home/out/**"
      ],
      "indentStyle": "space",
      "lineWidth": 80,
      "indentSize": 2
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "single",
        "semicolons": "asNeeded"
      }
    },
    "$schema": "https://unpkg.com/rome@latest/configuration_schema.json"
  }